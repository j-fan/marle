{
  "extends": [
    "stylelint-config-html/svelte",
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "variants",
          "responsive",
          "apply",
          "screen"
        ]
      }
    ]
  }
}
